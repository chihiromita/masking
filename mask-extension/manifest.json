{
  "manifest_version": 3,
  "name": "個人情報マスク",
  "version": "1.2.0",
  "description": "ページ内の個人情報 (郵便番号/電話/メール) をぼかす/解除を切り替えできます",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "個人情報マスク",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}